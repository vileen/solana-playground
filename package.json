{
  "name": "solana-snapshot-tool",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"yarn run dev:backend\" \"yarn run dev:frontend\"",
    "dev:backend": "tsx watch src/backend/server.ts",
    "dev:frontend": "vite",
    "build": "npx tsc --skipLibCheck && npx vite build",
    "build:backend": "node bootstrap.js && npx tsc --project tsconfig.json --outDir dist/backend --skipLibCheck",
    "postinstall": "mkdir -p /opt/render/project/src/dist || true",
    "start": "chmod +x startup.sh && ./startup.sh",
    "preview": "vite preview",
    "render:build": "yarn && yarn build && yarn build:backend",
    "render:start": "chmod +x startup.sh && ./startup.sh"
  },
  "dependencies": {
    "@metaplex-foundation/digital-asset-standard-api": "latest",
    "@metaplex-foundation/js": "^0.19.4",
    "@metaplex-foundation/mpl-token-metadata": "^2.13.0",
    "@metaplex-foundation/umi": "^0.8.9",
    "@metaplex-foundation/umi-bundle-defaults": "^0.8.9",
    "@solana/web3.js": "^1.87.6",
    "bs58": "^5.0.0",
    "chart.js": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "primeflex": "^4.0.0",
    "primeicons": "^6.0.1",
    "primereact": "^10.5.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.8",
    "typescript": "^5.3.3",
    "@vitejs/plugin-react": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=16"
  }
}
