{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ES2022"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/backend/legacy/**/*.ts",
    "src/backend/services/nftCollectionsDb.ts",
    "src/backend/services/tokenServiceDb.ts"
  ]
} 