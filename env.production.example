NODE_ENV=production
PORT=3001

# Comma-separated list of allowed browser origins for CORS.
# Example:
# ALLOWED_ORIGINS=https://app.example.com,https://www.app.example.com
ALLOWED_ORIGINS=https://app.example.com

# Enable when running behind a reverse proxy (Caddy, Nginx, Traefik).
TRUST_PROXY=true

# Enable only when app traffic always comes through HTTPS.
ENFORCE_HTTPS=true

DATABASE_URL=postgresql://app_user:strong_password@127.0.0.1:5432/solana_playground
SOLANA_RPC_URL=https://your-rpc-provider.example.com
SOLANA_API_KEY=your_rpc_api_key
BITQUERY_API_KEY=your_bitquery_api_key
BITQUERY_TOKEN=your_bitquery_token
